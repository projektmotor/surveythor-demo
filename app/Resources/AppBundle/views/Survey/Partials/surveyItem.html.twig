{# surveyItem \AppBundle\Entity\SurveyItem #}
<div class="panel panel-default parent-item survey-item"
     data-sortorder-url="{{ path('survey_item_set_sort_order', {'surveyItem': surveyItem.id}) }}">
    <div class="panel-heading">
        <span class="panel-title clearfix">
            <span class="pull-left item-title panel-indicator">
                <a class="item-title clearfix " href="{{ path('survey_item_form', {'surveyItem' : surveyItem.id }) }}">
                    <span class="pull-left">
                        <span class="panel-indicator-bottom">
                            <span class="glyphicon glyphicon-triangle-bottom"></span>
                        </span>
                        <span class="panel-indicator-top">
                            <span class="glyphicon glyphicon-triangle-top"></span>
                        </span>
                    </span>
                    &nbsp;<span class="item-title-text">{{ surveyItem.backendTitle }}</span>
                </a>
            </span>
            <span class="pull-right">
                {{ surveyItem.contentTypeName }}
                |
                <a href="{{ path('survey_item_remove', {'surveyItem' : surveyItem.id}) }}" class="item-delete">
                    <span class="glyphicon glyphicon-trash"></span>
                </a>
            </span>
        </span>
    </div>

    <div id="item-{{ surveyItem.id }}" class="panel-collapse collapse parent-item">
        {% if form is defined %}
            {{ form_widget(form) }}
        {% endif %}
    </div>
</div>
