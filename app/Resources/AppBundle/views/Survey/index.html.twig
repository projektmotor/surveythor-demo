{% extends '::base.html.twig' %}

{% block body %}
    <table class="table">
        {% for survey in surveys %}
            <tr>
                <td class="col-md-2">
                    <h4>{{ survey.title }}</h4>
                </td>
                <td class="col-md-8">
                    {{ survey.description }}<br/>
                </td>
                <td class="col-md-2">
                    <div class="btn-group-vertical btn-group-xs">
                        <a href="{{ path('survey_edit', {'survey' : survey.id}) }}" class="text-nowrap"
                           title="Umfrage bearbeiten">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Umfrage bearbeiten
                        </a><br />
                        <a href="{{ path('result_new', {'survey' : survey.id }) }}" class="text-nowrap"
                           title="Umfrage durchführen">
                            <span class="glyphicon glyphicon-record" aria-hidden="true"></span> Umfrage durchführen
                        </a><br />
                        <a href="{{ path('survey_evaluations', {'survey' : survey.id}) }}" class="text-nowrap"
                           title="Auswertungen ansehen">
                            <span class="glyphicon glyphicon-stats" aria-hidden="true"></span> Auswertungen ansehen
                        </a>

                    </div>
                    {#<div class="btn-group btn-group-xs">#}
                    {#<a href="" class="btn btn-danger" title="Umfrage löschen"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>#}
                    {#</div>#}
                </td>
            </tr>
        {% endfor %}
    </table>

    <a class="btn btn-primary pull-right col-xs-12" href="{{ path('survey_new') }}">neue Umfrage</a>
{% endblock %}
