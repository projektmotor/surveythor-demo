<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Surveythor - Demo{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('build/global.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block navbar %}
            <nav class="navbar navbar-default navbar-fixed-top">
                <div class="container-fluid">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>

                        <a class="navbar-brand pm-navbar-brand" href="{{ path('homepage') }}" style="padding: 0;">
                            <img src="{{ asset('/images/survey.png') }}" style="height: 50px;" />
                        </a>
                    </div>

                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

                        {% set menu = knp_menu_get('main', [], {'currentRoute': app.request.attributes.get('_route')}) %}
                        {{ knp_menu_render(menu) }}

                        <p class="navbar-text navbar-right">
                            {{- 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') -}}
                            &nbsp;|
                            <a href="{{ path('fos_user_security_logout') }}">
                                {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                            </a>
                        </p>
                    </div><!-- /.navbar-collapse -->
                </div><!-- /.container-fluid -->
            </nav>
        {% endblock %}

        <div class="container-fluid">
            {% block body %}{% endblock %}
        </div>
        <div id="loading-indicator"></div>
        <div id="dialog"></div>
        {% block javascripts %}
            <script type="application/javascript" src="{{ asset('build/base.js') }}"></script>
        {% endblock %}
    </body>
</html>
