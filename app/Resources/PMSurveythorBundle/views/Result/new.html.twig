    <h3>{{ survey.title }}</h3>

    <div id="js-st-surveythor-container" style="border: 1px solid grey; padding: 12px;"></div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="application/javascript" src="{{ asset('build/frontend.js') }}"></script>
