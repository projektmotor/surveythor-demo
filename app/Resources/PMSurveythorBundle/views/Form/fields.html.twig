{% block question_collection_widget %}
    {% if prototype is defined %}
        {%- set attr = attr|merge({'data-prototype': form_row(prototype) }) -%}
    {% endif %}
    <div {{ block('widget_container_attributes') }}>
        {%- if form.parent is empty -%}
            {{ form_errors(form) }}
        {%- endif -%}
        {% for child in form %}
            <div class="panel panel-default question">
                <div class="panel-heading" role="tab">
                    <div class="row">
                        <div class="col-md-6">
                            <h4 class="panel-title">
                                <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse-question-{{ child.vars.id }}" aria-expanded="true" aria-controls="collapse-question-{{ child.vars.id }}">
                                {{ child.vars.value.text }}
                                </a>
                            </h4>
                        </div>
                        <div class="col-md-6">
                            <div class="pull-right question-toolbox">
                                <a href="#" class="remove-panel">x</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="collapse-question-{{ child.vars.id }}" class="panel-collapse collapse" role="tabpanel" aria-labelledby="collapse-question-{{ child.vars.id }}">
                    <div class="panel-body">
                        {{- form_row(child) -}}
                    </div>
                </div>
            </div>
        {% endfor %}
        {{- form_rest(form) -}}
    </div>
{% endblock %}


{% block answer_collection_widget %}
    {% if prototype is defined %}
        {%- set attr = attr|merge({'data-prototype': form_row(prototype) }) -%}
    {% endif %}
    <div {{ block('widget_container_attributes') }}>
        {%- if form.parent is empty -%}
            {{ form_errors(form) }}
        {%- endif -%}
        {% for child in form %}
            <div class="panel panel-default answer">
                <div class="panel-heading" role="tab"">
                    <div class="row">
                        <div class="col-md-6">
                            <h4 class="panel-title">
                                <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse-answer-{{ child.vars.id }}" aria-expanded="true" aria-controls="collapse-answer-{{ child.vars.id }}">
                                    {{ child.vars.value.text }}
                                </a>
                            </h4>
                        </div>
                        <div class="col-md-6">
                            <div class="pull-right question-toolbox">
                                <a href="#" class="remove-panel">x</a>
                                <a href="#" class="add-child-question">Add a child question</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="collapse-answer-{{ child.vars.id }}" class="panel-collapse collapse" role="tabpanel" aria-labelledby="collapse-answer-{{ child.vars.id }}">
                    <div class="panel-body">
                        {{- form_row(child) -}}
                    </div>
                </div>
            </div>
        {% endfor %}
        <div><a href="#" class="add-answer">Add an answer</a></div>
        {{- form_rest(form) -}}
    </div>
{% endblock %}

{% block result_answer_collection_widget %}
    <div {{ block('widget_container_attributes') }}>
        {%- if form.parent is empty -%}
            {{ form_errors(form) }}
        {%- endif -%}
        {% for child in form.children %}
            {{ child.vars.value.question.text }}
            {{- form_row(child) -}}
        {% endfor %}
        {{- form_rest(form) -}}
    </div>
{% endblock %}
