{% block answer_collection_widget %}
    <div {{ block('widget_container_attributes') }}>
        {%- if form.parent is empty -%}
            {{ form_errors(form) }}
        {%- endif -%}
        {% for child in form.children %}
            {% set parent = '' %}
            {% if not child.vars.value.question.parentChoice is null %}
                {% set parent = child.vars.value.question.parentChoice.id %}
            {% endif %}
            <div class="result_answers-question_answer" data-parent-id="{{ parent }}">
                <b>{{ child.vars.data.question.text|nl2br }}</b>
                {{- form_row(child) -}}
            </div>
        {% endfor %}
    </div>
{% endblock %}

