<div class="panel panel-default parent-item survey-item" data-sortorder-url="{{ path('surveyitem_set_sortorder', {'item':item.id})}}">
    <div class="panel-heading">
        <span class="panel-title clearfix" id="questions-heading">
            <span class="pull-left item-title">
                <a class="item-title" href="{{ path('surveyitem_form', {'item' : item.id }) }}">
                    {{ item.backendTitle }}
                </a>
            </span>
            <span class="pull-right">
                {{ item.contentTypeName }}
                |
                <a href="{{ path('surveyitem_remove', {'item' : item.id}) }}" class="item-delete">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                </a>
            </span>
        </span>
    </div>

    <div id="item-{{ item.id }}" class="panel-collapse collapse parent-item">
        <div class="surveyitem-form">
        </div>
    </div>
</div>

