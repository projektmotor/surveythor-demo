<div class="panel panel-default parent survey-item" data-sortorder-url="{{ path('surveyitem_set_sortorder', {'item':item.id})}}">
    <div class="panel-heading" data-itemform-url="{{ path('surveyitem_form', {'item' : item.id }) }}">
        <span class="panel-title clearfix" id="questions-heading">
            <span class="pull-left">
                {{ item.backendTitle }}
            </span>
            <span class="pull-right">
                {{ item.contentTypeName }}
            </span>
        </span>
    </div>

    <div id="item-{{ item.id }}" class="panel-collapse collapse parent-item">
        <div class="surveyitem-form">
        </div>
    </div>
</div>

