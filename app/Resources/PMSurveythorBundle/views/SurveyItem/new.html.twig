<div class="panel panel-default survey-item" data-sortorder-url="{{ path('surveyitem_set_sortorder', {'item' : form.vars.value.id}) }}">
    <div class="panel-heading">
        <span class="panel-title clearfix" id="questions-heading">
            <span class="pull-left">
                <a class="item-title">
                    {{ form.vars.value.backendTitle }}
                </a>
            </span>
            <span class="pull-right">
                {{ form.vars.value.contentTypeName }}
                |
                <a href="{{ path('surveyitem_remove', {'item' : form.vars.value.id}) }}" class="item-delete">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                </a>

            </span>
        </span>
    </div>

    <div
        id="item-{{ form.vars.value.id }}"
        class="panel-collapse collapse loaded {{ form.vars.value.itemType }} {% if parent %}parent-item{% endif %}"
    >
        <div class="surveyitem-form">
            {{ form(form) }}
        </div>
    </div>
</div>
